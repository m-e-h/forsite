{
	"name": "forsite",
	"version": "0.1.0",
	"description": "Starter theme for WordPress.",
	"author": "Marty Helmick",
	"license": "GPL-3.0-or-later",
	"homepage": "https://github.com/m-e-h/forsite#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/m-e-h/forsite.git"
	},
	"bugs": {
		"url": "https://github.com/m-e-h/forsite/issues"
	},
	"scripts": {
		"start": "npm install && composer install",
		"build": "run-s lint:css pretty:js css js",
		"release": "npm run build && composer update --prefer-dist --no-dev",
		"live-sync": "run-p watch:* bs:proxy",
		"watch": "run-p watch:*",
		"css": "run-s css:*",
		"js": "run-p \"js:* -- --mode=production\"",
		"watch:css": "run-p \"css:* -- --watch\"",
		"watch:js": "run-p \"js:* -- --mode development -w\"",
		"css:meta": "postcss src/css/main.css -o ./style.css --env development",
		"css:main": "postcss src/css/main.css -d dist/css --env production",
		"css:editor": "postcss src/css/editor-style.css -d dist/css --env editor",
		"js:main": "webpack --module-bind js=babel-loader src/js/index.js -o dist/js/main.js",
		"js:customizer": "webpack --module-bind js=babel-loader src/js/customize-view.js -o dist/js/customize-view.js",
		"lint:css": "stylelint './src/css/**/*.css' --fix",
		"lint:js": "eslint './src/js/**/*.js' --fix",
		"pretty:style": "stylelint 'style.css' --fix",
		"pretty:js": "prettier --single-quote --use-tabs --tab-width 2 --trailing-comma none --write './src/**/*.js'",
		"bs:proxy": "browser-sync 'http://meh.local' 'dist' 'src' 'app' 'views' -w"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.4",
		"@babel/core": "^7.10.4",
		"@babel/plugin-transform-runtime": "^7.10.4",
		"@babel/preset-env": "^7.10.4",
		"@wordpress/scripts": "^12.0.0",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"browser-sync": "^2.26.7",
		"browserslist": "^4.12.2",
		"classnames": "^2.2.6",
		"cssnano": "^4.1.10",
		"eslint": "^7.4.0",
		"eslint-config-xo": "^0.32.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^7.1.1",
		"postcss-editor-styles": "^0.3.0",
		"postcss-import": "^12.0.1",
		"postcss-nested": "^4.2.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.0.5",
		"stylelint": "^13.6.1",
		"stylelint-config-standard": "^20.0.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12"
	},
	"babel": {
		"presets": [
			"@babel/env"
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"xo"
		],
		"rules": {
			"no-negated-condition": "off",
			"capitalized-comments": "off",
			"arrow-parens": [
				"error",
				"always"
			],
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"globals": {
			"jQuery": "readonly",
			"wp": "readonly"
		},
		"parser": "babel-eslint"
	},
	"stylelint": {
		"defaultSeverity": "warning",
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab",
			"at-rule-no-unknown": null,
			"function-parentheses-newline-inside": null,
			"declaration-colon-newline-after": null,
			"no-descending-specificity": null,
			"custom-property-empty-line-before": null,
			"value-list-comma-newline-after": null,
			"rule-empty-line-before": null,
			"max-nesting-depth": [
				2,
				{
					"ignore": [
						"pseudo-classes"
					],
					"ignoreAtRules": [
						"/^extend/",
						"media"
					]
				}
			]
		}
	},
	"browserslist": [
		"> 1.5% in US",
		"last 2 versions"
	]
}
