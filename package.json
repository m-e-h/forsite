{
	"name": "forsite",
	"version": "0.1.1",
	"description": "A started starter theme for WordPress",
	"author": "Marty Helmick",
	"license": "GPL-2.0+",
	"homepage": "https://github.com/m-e-h/forsite",
	"scripts": {
		"build": "npm-run-all --sequential css js && npm run format:css",
		"dev": "npm-run-all --parallel dev:*",
		"dev:css": "npm run compile:css --watch",
		"dev:js": "webpack --module-bind js=babel-loader src/js/index.js -o dist/js/[name].js --mode development -w",
		"css": "npm-run-all --sequential compile:css",
		"js": "webpack --module-bind js=babel-loader src/js/index.js -o dist/js/[name].js -p",
		"compile:css": "npm-run-all --parallel main:css editor:css",
		"editor:css": "postcss src/css/editor.css -d dist/css --env editor development",
		"main:css": "postcss src/css/main.css -d dist/css --env development",
		"compile:js": "webpack --module-bind js=babel-loader src/js/index.js -o dist/js/[name].js --mode development",
		"lint": "npm-run-all lint:*",
		"lint:css": "stylelint './src/css/**/*.css' --fix",
		"lint:js": "eslint './src/js/**/*.js'",
		"lint:php": "./vendor/bin/phpcs .",
		"format:css": "prettier --write './dist/css/**/*.css'",
		"format:js": "prettier --write './src/js/**/*.js'",
		"i18n": "npm run i18n:textdomain && npm run i18n:pot",
		"i18n:textdomain": "npx wpi18n addtextdomain --exclude=vendor,node_modules",
		"i18n:pot": "npx wpi18n makepot",
		"rename": "theme-claim"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/m-e-h/forsite.git"
	},
	"devDependencies": {
		"@babel/cli": "^7.1.0",
		"@babel/core": "^7.1.0",
		"@babel/plugin-transform-runtime": "^7.1.0",
		"@babel/preset-env": "^7.1.0",
		"babel-eslint": "^10.0.1",
		"babel-loader": "8.0.3",
		"browser-sync": "^2.24.7",
		"browserslist": "^4.1.1",
		"cssnano":"^4.1.4",
		"eslint": "^5.6.0",
		"eslint-config-wordpress": "^2.0.0",
		"node-wp-i18n": "^1.2.1",
		"npm-run-all": "^4.1.3",
		"postcss-cli": "^6.0.0",
		"postcss-discard-comments": "^4.0.1",
		"postcss-discard-empty": "^4.0.1",
		"postcss-extend-rule": "2.0.0",
		"postcss-import": "12.0.0",
		"postcss-increase-specificity": "0.6.0",
		"postcss-preset-env": "^6.0.7",
		"postcss-simple-vars": "5.0.1",
		"prettier": "^1.14.3",
		"stylelint": "^9.6.0",
		"stylelint-config-wordpress": "^13.1.0",
		"webpack": "^4.20.2",
		"webpack-cli": "^3.1.1",
		"theme-claim": "^0.1.11"
	},
	"babel": {
		"presets": [
			"@babel/env"
		]
	},
	"stylelint": {
		"defaultSeverity": "warning",
		"extends": "stylelint-config-wordpress"
	},
	"eslintConfig": {
		"extends": "wordpress",
		"parser": "babel-eslint"
	},
	"browserslist": [
		"> 1%",
		"ie >= 10",
		"last 1 Android versions",
		"last 1 ChromeAndroid versions",
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Safari versions",
		"last 2 iOS versions",
		"last 2 Edge versions",
		"last 2 Opera versions"
	]
}
